{{#unless skipHeader}}
    <thead>
    {{! raw "user-list-header" TODO: use this instead
          order=order
          ascending=ascending
          showSeen=showSeen
          showLikesReceived=showLikesReceived
          showLikesGiven=showLikesGiven
          showTopicCount=showTopicCount
          showPostCount=showPostCount
          showTopicsEntered=showTopicsEntered
          showPostsRead=showPostsRead
          showTimeRead=showTimeRead
          showCreated=showCreated
          showDaysVisited=showDaysVisited}}
    <th></th>
    {{#if showSeen}}
        {{directory-toggle field="seen" order=order ascending=ascending}}
    {{/if}}
    {{#if showLikesReceived}}
        {{directory-toggle field="likes_received" order=order ascending=ascending icon="heart"}}
    {{/if}}
    {{#if showLikesGiven}}
        {{directory-toggle field="likes_given" order=order ascending=ascending icon="heart"}}
    {{/if}}
    {{#if showTopicCount}}
        {{directory-toggle field="topic_count" order=order ascending=ascending}}
    {{/if}}
    {{#if showPostCount}}
        {{directory-toggle field="post_count" order=order ascending=ascending}}
    {{/if}}
    {{#if showTopicsEntered}}
        {{directory-toggle field="topics_entered" order=order ascending=ascending}}
    {{/if}}
    {{#if showPostsRead}}
        {{directory-toggle field="posts_read" order=order ascending=ascending}}
    {{/if}}
    {{#if showTimeRead}}
        {{directory-toggle field="time_read" order=order ascending=ascending}}
    {{/if}}
    {{#if showCreated}}
        {{directory-toggle field="created" order=order ascending=ascending}}
    {{/if}}
    {{#if showDaysVisited}}
        {{directory-toggle field="days_visited" order=order ascending=ascending}}
    {{/if}}

    </thead>
{{/unless}}
<tbody>
{{#each users as |user|}}
    {{user-list-item user=user
                     showSeen=showSeen
                     showLikesReceived=showLikesReceived
                     showLikesGiven=showLikesGiven
                     showTopicCount=showTopicCount
                     showPostCount=showPostCount
                     showTopicsEntered=showTopicsEntered
                     showPostsRead=showPostsRead
                     showTimeRead=showTimeRead
                     showCreated=showCreated
                     showDaysVisited=showDaysVisited}}
    {{! raw "list/visited-line" lastVisitedUser=lastVisitedUser user=user}}
{{/each}}
</tbody>
